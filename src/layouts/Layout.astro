---
import Header from "../components/Header.astro";
interface Props {
    title?: string;
}

const title = Astro.props.title ?? "Rick and Morty API";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
    </body>
</html>

<style is:global>
    :root {
        --color-light: lch(87 0.02 356.63);
        --color-dark-rm: lch(8 11.89 282.28);
        --color-blue-rm: lch(64 38.97 211.46);
        --color-green-rm: lch(71 63.52 123.65);
        --color-yellow-rm: lch(88 54.54 92.34);
        --color-yellow-green-rm: lch(83 71.04 106.45);
    }

    body {
        margin: 0;
        padding-block: 1rem;
        color-scheme: dark;
        color: var(--color-light);
        background-color: var(--color-dark-rm);
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }
</style>
