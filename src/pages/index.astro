---
import Layout from "../layouts/Layout.astro";
---

<style>
    section {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;

        @media (width <= 1024px) {
            grid-template-columns: repeat(2, 1fr);
        }
        @media (width <= 768px) {
            grid-template-columns: repeat(1, 1fr);
        }

        > a {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: currentColor;
            text-decoration: none;
            font-weight: bold;
            gap: 1rem;

            > img {
                object-fit: cover;
                width: 100%;
                height: 100%;
                aspect-ratio: 1;
            }

            &:hover > div::after {
                width: 100%;
                left: 0;
            }

            > div {
                position: relative;
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
                padding-block-end: 0.5rem;

                &::after {
                    content: "";
                    position: absolute;
                    width: 0;
                    height: 0.05rem;
                    bottom: 0;
                    left: 50%;
                    transform: translateY(-50%);
                    background-color: var(--color-green-rm);
                    box-shadow: 0 0 5px var(--color-yellow-green-rm);
                    transition: all 0.3s;
                }

                > svg {
                    width: 1rem;
                }

                > span {
                    display: block;
                    min-width: fit-content;
                    font-size: 1rem;
                    line-height: 1rem;
                }
            }
        }
    }
</style>

