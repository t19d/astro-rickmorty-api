---
interface Props {
    title?: string;
}

const title = Astro.props.title ?? "Rick and Morty API";
const currentPath = Astro.url.pathname;
---

<style>
    header {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-transform: lowercase;
        gap: 1rem;
    }

    nav {
        width: 50%;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    a {
        position: relative;
        padding: 0.25rem 0.5rem;
        color: currentColor;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.5rem;

        &::after {
            content: "";
            position: absolute;
            width: 0;
            height: 0.05rem;
            bottom: 0;
            left: 50%;
            transform: translateY(-50%);
            background-color: var(--color-green-rm);
            box-shadow: 0 0 5px var(--color-yellow-green-rm);
            transition: all 0.3s;
        }

        &.current {
            color: var(--color-blue-rm);
        }

        &:hover::after {
            width: 100%;
            left: 0;
        }
    }
</style>
<header>
    <nav>
        <a href="/" class={currentPath === "/" ? "current" : ""}>home</a>
        <a href="/characters" class={currentPath === "/characters" ? "current" : ""}>characters</a>
        <a href="/locations" class={currentPath === "/locations" ? "current" : ""}>locations</a>
        <a href="/episodes" class={currentPath === "/episodes" ? "current" : ""}>episodes</a>
    </nav>
</header>
